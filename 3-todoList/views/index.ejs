<% include ../views/partials/header %>
    <div class="row">
        <div class="col-md-6">
            <div class="card bg-light card-body">
                <form method="post" action="/todo/add">
                    <div class="form-group">
                        <label>Todo name</label>
                        <input class="form-control" type="text" name="text" placeholder="Add todo">
                    </div>
                    <div class="form-group">
                        <label>Todo body</label>
                        <textarea class="form-control" name="body" placeholder="Add body"></textarea>
                    </div>
                    <button class="btn btn-primary btn-block" type="submit">Submit</button>
                </form>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-light card-body">
                <ul class="list-group">
                    <% todos.forEach(function(todo) { %>
                        <li class="list-group-item">
                            <b><%= todo.text %></b> <br> <%= todo.body %>
                            <div class="text-right">
                                <a class="btn btn-light" href="/todo/edit/<%= todo._id %>" >Edit</a> <!-- could also do delete in this way, just use a link -->
                                <a data-id="<%= todo._id %>" href="#" class="delete-todo btn btn-danger">Delete</a> <!-- using the class and data-id here because we're doing an ajax removal and need something to hook to, not really required -->
                            </div>
                        </li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>
    
<% include ../views/partials/footer %>
